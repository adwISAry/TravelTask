@using TravelTask.Areas.Admin.ViewModels;
@using TravelTask.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model IEnumerable<AdminProductListItemVM>
@{
	ViewData["Title"] = "Index";


	
}
<div class=" card shadow mb-4">
	<div class=" cardheader-appear py-3">
		<h6 class="m-0 font-weight-bold text-primary">Products</h6>
		<a asp-action="Create" class=" btn btn-outline-success">Create</a>
</div>
<div class="card-body">
	<div class="table-responsive">
		<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0"
<thead>
	<th>Id</th>
	<th>Name</th>
	<th>Price</th>
	<th>Image</th>
	<th colspan="2">Actions</th>
</thead>
<tbody>
					@if (Model != null)
					{
						@foreach (var item in Model)
						{
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>@item.Price</td>
						<td>@item.ImageUrl</td>
						<td><img width="100" height="50" src="~/productimages/@item.ImageUrl"/> </td>
						
						<td class=" text-center"><a class="btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
						<td class=" text-center"><a class="btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>




						}
					}
					else
					{
						<tr>
							<td class="text-center" colspan="10">No data</td>
						</tr>
					}
					</tbody>
				</table>

			</div>
	</div>
</div>
